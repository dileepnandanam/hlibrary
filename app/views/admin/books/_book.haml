.border.border-grey-900.p-3.mt-3.shadow.rounded-md
  .text-2xl.float-left
    = book.name
  .clearfix
  .mb-2
  .links
    = link_to 'edit', '#', data: {reflex: 'click->Admin::BooksReflex#edit', id: book.id}, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
    = link_to 'delete', '#', data: {reflex: 'click->Admin::BooksReflex#destroy', id: book.id}, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
  .edit-book-form-container{id: "edit-book-#{book.id}"}