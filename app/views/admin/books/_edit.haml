- if book.errors.any?
  - book.errors.full_messages.each do |em|
    .error-message
      = em
= form_for([:admin, book], data: {reflex: 'submit->Admin::Books#update', id: book.id}) do |f|
  = f.label 'Name of Book'
  .clearfix
  = f.text_field :name
  .clearfix
  = f.label 'Serial Number'
  .clearfix
  = f.text_field :serial_number
  .clearfix
  = f.submit 'Update Book'
  