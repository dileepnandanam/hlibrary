<h2 class="text-3xl">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-sm'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'block text-gray-700 text-l font-bold' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2' %>
  </div>

  <div class="field">
    <%= f.label :name, class: 'block text-gray-700 text-l font-bold' %>
    <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'block text-gray-700 text-l font-bold' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'block text-gray-700 text-l font-bold' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
