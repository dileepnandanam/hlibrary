<h2 class="text-3xl">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-sm'}) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'block text-gray-700 text-l font-bold mb-1' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'block text-gray-700 text-l font-bold mb-1' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-2' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'block text-gray-700 text-l font-bold mb-1' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
